{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@application/*": ["./src/application/*"],
      "@infra/*": ["./src/infra/*"],
      "@main/*": ["./src/main/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "exclude": ["node_modules"]
}
